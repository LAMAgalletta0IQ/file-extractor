{
  "productName": "File Extractor",
  "version": "2.0.0",
  "identifier": "com.fileextractor.app",
  "build": {
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../ui"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../ui"
    },
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "File Extractor",
        "width": 620,
        "height": 580,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "center": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null,
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "copyright": "Â© 2025",
    "category": "Utility",
    "shortDescription": "A modern file extractor and context builder for LLMs",
    "longDescription": "File Extractor - Extract and organize files for LLM context building"
  },
  "plugins": {}
}
