{
  "build": {
    "beforeDevCommand": "npm run ui:dev",
    "beforeBuildCommand": "npm run ui:build",
    "devPath": "http://localhost:1420",
    "distDir": "../ui/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "File Extractor",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setSize": true,
        "setResizable": true,
        "center": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.fileextractor.app"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "File Extractor",
        "width": 620,
        "height": 580,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
